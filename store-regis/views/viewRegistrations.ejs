<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Registrations</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .custom-table tbody tr:nth-child(odd) {
            background-color: #f2f2f2; /* Light gray background for odd rows */
        }
        .custom-table tbody tr:nth-child(even) {
            background-color: #ffffff; /* White background for even rows */
        }
    </style>
</head>
<body>
    <h1 style="padding:20px; text-align:center;">Registered Users</h1>
    <table class="table table-bordered custom-table">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>College</th>
                <th>Email</th>
                <th>Phone Number</th>
                <th>Gender</th>
                <th>Accommodation</th>
                <th>Transaction ID</th>
            </tr>
        </thead>
        <tbody>
            <% registrations.forEach(registration => { %>
                <tr>
                    <td><%= registration.name %></td>
                    <td><%= registration.College %></td>
                    <td><%= registration.email %></td>
                    <td><%= registration.phno %></td>
                    <td><%= registration.gender %></td>
                    <td><%= registration.Accommodation %></td>
                    <td><%= registration.transactionId %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <!-- Bootstrap JS (optional, if you need JavaScript components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
